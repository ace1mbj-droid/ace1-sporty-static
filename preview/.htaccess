# Preview-specific Apache settings

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /preview/
    # Remove .html extension within preview
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}.html -f
    RewriteRule ^([^\.]+)$ $1.html [NC,L]
</IfModule>

# Ensure index loads for preview
DirectoryIndex index.html index.htm

<IfModule mod_headers.c>
    # Match root policy but allow external images for preview
    Header always set Referrer-Policy "no-referrer-when-downgrade"
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://*.supabase.co https://accounts.google.com https://connect.facebook.net; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com https://cdnjs.cloudflare.com; img-src 'self' data: https: blob: https://i.ibb.co https://images.unsplash.com; connect-src 'self' https://*.supabase.co https://accounts.google.com; frame-src https://accounts.google.com https://www.facebook.com;"
</IfModule>
